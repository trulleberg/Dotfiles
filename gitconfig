[user]
    name = "Hannes Bellmer"
	email = hannes.bellmer@netapp.com
[core]
    excludesfile = ~/.gitignore
	compression = -1
	editor = vim
[color]
	ui = true
    status = auto
    branch = auto
[alias]
        lg = log --color --graph --pretty=format:'%C(red)%h -%C(green)%cr -%C(bold blue) %an -%Creset %s %C(yellow) %C(auto)%d ' --abbrev-commit --branches --tags --date=short
        cm = commit -m
        ca = commit --amend
        d = diff --color-words
        s = status -s
        a = !git add . && git status
        au = !git add -u . && git status
        tags = tag -l
        branches = branch -av
        remotes = remote -v
[merge]
	ff = false
[push]
	default = simple
